<% layout('layouts/boilerplate') -%>

<div class="alert shadow-lg border-0 rounded-4 d-flex align-items-center justify-content-between p-4 text-white" 
     role="alert" 
     style="max-width: 650px; margin: 40px auto; font-size: 1.15rem; 
            background: linear-gradient(135deg, #ff4b2b, #ff416c); 
            box-shadow: 0 8px 20px rgba(0,0,0,0.15); transition: transform 0.2s ease;">
  
  <!-- Left section with icon + message -->
  <div class="d-flex align-items-center">
    <div class="me-3 d-flex align-items-center justify-content-center" 
         style="width: 45px; height: 45px; border-radius: 50%; background: rgba(255,255,255,0.2);">
      <i class="bi bi-exclamation-octagon-fill" style="font-size: 1.6rem; color: #fff;"></i>
    </div>
    <span>
      <strong>Error <%= status %></strong><br>
      <%= message %>
    </span>
  </div>

  <!-- Close button -->
  <button type="button" class="btn-close btn-close-white ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

