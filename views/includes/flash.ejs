 <% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show flash-div" role="alert">
  <%= success %>
  <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<%  } %>

<% if(error && error.length) { %>
 <div class="alert alert-warning alert-dismissible fade show flash-div" role="alert">
 <%= error %>
  <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %>